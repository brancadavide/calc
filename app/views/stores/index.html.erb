
<div class="container">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h1>Stores</h1>
    </div>
    <div class="panel-body">  

        <table class="table table-condensed">
          <thead>
            <tr>
              <th>Name</th>
              <th colspan="1"></th>
            </tr>
          </thead>        

          <tbody>
            <% @stores.each do |store| %>
              <tr class="rowlink" id="<%= edit_store_path(store) %>">
                <td><h3><%= store.name %></h3></td>
                <td><%= link_to  raw('&times;'), store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      
    </div>
    <div class="panel-footer">
        <%= link_to 'New Store', new_store_path, class: "btn btn-primary btn-block" %>
    </div>  

  </div>  

</div>


