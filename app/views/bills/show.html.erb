


 



<div class="container">
  <div class="panel panel-default">
    
    <div class="panel-body">  

        <p>
          <strong>Type:</strong>
          <%= @bill.type_of %>
        </p>        

        <p>
          <strong>Date of:</strong>
          <%= @bill.date_of %>
        </p>        

        <p>
          <strong>Store:</strong>
          <%= @bill.store.name if @bill.store.present? %>
        </p>        

        <p>
          <strong>Amount:</strong>
          <%= @bill.amount %>
        </p>        

        <p>
          <strong>Notification:</strong>
          <%= @bill.notification %>
        </p>

        
      
    </div>
    <div class="panel-footer">
      <%= link_to 'Edit', edit_bill_path(@bill) , class: "btn btn-primary btn-block"%>
    </div>
  </div>  

</div>

<%= link_to 'Back', bills_path %>