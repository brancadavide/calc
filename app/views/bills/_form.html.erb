<%= form_with(model: bill, local: true) do |form| %>
 
<div class="row">
  <div class="form-group col-lg-6">
    <%= form.label :type_of,"Type" , class: "control-label" %>
    <%= form.select :type_of,["Food","Non-Food","Mixed"], {}, class: "form-control" %>
  </div>

  <div class="form-group col-lg-6">
    <%= form.label :date_of,  class: "control-label" %>
    <%= form.date_field :date_of , class: "form-control"  %>
  </div>
</div>

<div class="row">
  <div class="form-group col-lg-6">
    <%= form.label :store_id, "Store", class: "control-label" %>
    <%= form.select :store_id, Store.all.map { |store| [store.name, store.id] }, {}, class: "form-control" %>
  </div>


  <div class="form-group col-lg-6">
    <%= form.label :amount, class: "control-label" %>
    <%= form.text_field :amount, class: "form-control" %>
  </div>
</div>

<div class="row">
  <div class="form-group col-lg-6">
    <%= form.label :notification,  class: "control-label" %>
    <%= form.text_area :notification, class: "form-control" %>
  </div>
</div>

  <div class="actions">
    <%= form.submit "Save", class: "btn btn-success" %>
  </div>
<% end %>
