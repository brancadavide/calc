







<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h1>Bills</h1>
    </div>
    <div class="panel-body">  

        <table class="table table-condensed">
          <thead>
            <tr>
              <th>Type</th>
              <th>Date of</th>
              <th>Store</th>
              <th>Amount</th>
              <th colspan="1"></th>
            </tr>
          </thead>        

          <tbody>
            <% @bills.each do |bill| %>
              <tr class="rowlink" id="<%=edit_bill_path(bill) %>">
                <td><%= bill.type_of %></td>
                <td><%= bill.date_of %></td>
                <td><%= bill.store.name if bill.store.present? %></td>
                <td><%= bill.amount %></td>
                <td><%= link_to  raw('&times;'), bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      
    </div>
    <div class="panel-footer">
      <%= link_to 'New Bill', new_bill_path, class: "btn btn-primary btn-block" %>
    </div>
  </div>  

</div>